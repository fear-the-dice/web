.col-xs-12
  .row
    .col-xs-6.text-left
      h2.character__name='{{character}}'
      span.character__name--edit
        input.input__character
        i.glyphicon.glyphicon-check
      h3.player__name='({{name}})'
      span.player__name--edit
        input.input__player
        i.glyphicon.glyphicon-check
    .col-xs-6.text-right
      button.glyphicon.glyphicon-fire.player__hit(data-toggle="tooltip", title="Hit Me!")
      span.player__hit--edit
        input.input__hit(type="number", value="0")
        i.glyphicon.glyphicon-check
      button.glyphicon.glyphicon-heart.player__heal(data-toggle="tooltip", title="Heal Me!")
      span.player__heal--edit
        input.input__heal(type="number", value="0")
        i.glyphicon.glyphicon-check
      button.glyphicon.glyphicon-pencil.player__edit(data-toggle="tooltip", title="Edit Me!")
      button.glyphicon.glyphicon-remove.player__delete(data-toggle="tooltip", title="Delete Me!")
  .row
    .col-xs-2
      span.player__stat(stat="ac")='AC:'
      span.player__stat--value='{{ac}}'
      span.player__stat--edit
        input.input__stat(type="number")
        i.glyphicon.glyphicon-check
    .col-xs-2
      span.player__stat(stat="hp")='HP:'
      span.player__stat--value='{{hp}}'
      span.player__stat--edit
        input.input__stat(type="number")
        i.glyphicon.glyphicon-check
    .col-xs-2
      span.player__stat(stat="speed")='Speed:'
      span.player__stat--value='{{speed}}'
      span.player__stat--edit
        input.input__stat
        i.glyphicon.glyphicon-check
    .col-xs-2
      span.player__stat(stat="initiative")='Initiative:'
      span.player__stat--value='{{initiative}}'
      span.player__stat--edit
        input.input__stat(type="number")
        i.glyphicon.glyphicon-check
    .col-xs-2
      span.player__stat--locked(stat="damage")='Damage Taken:'
      span.player__stat--value--locked='{{damage}}'
    .col-xs-2
      span.player__stat--locked(stat="health")='Current Health:'
      span.player__stat--value--locked='{{health}}'
