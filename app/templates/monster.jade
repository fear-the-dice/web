.col-xs-11
  .row
  h2.monster__name--locked='{{monster}}'
  .row
  .col-xs-4
    span.monster__stat--locked(stat="initiative")='Initiative:'
    span.monster__stat--value--locked='{{initiative}}'
  .col-xs-4
    span.monster__stat--locked(stat="damage")='Damage Taken:'
    span.monster__stat--value--locked='{{damage}}'
.col-xs-1
  .row
  button.glyphicon.glyphicon-fire.monster__hit(data-toggle="tooltip", title="Hit Me!")
  span.monster__hit--edit
    input.input__hit(type="number", value="0")
    i.glyphicon.glyphicon-check
