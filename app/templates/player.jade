.col-xs-3
  img.player__thumb(src="{{thumb}}")
.col-xs-8
    .row
        h2.player__name--locked='{{character}}'
        h3.player__name--locked='({{name}})'
    .row
        .col-xs-4
            span.player__stat--locked(stat="initiative")='Initiative:'
            span.player__stat--value--locked='{{initiative}}'
        .col-xs-4
            span.player__stat--locked(stat="damage")='Damage Taken:'
            span.player__stat--value--locked='{{damage}}'
.col-xs-1
    .row
        button.glyphicon.glyphicon-user.player__control(alt="Take Control")
